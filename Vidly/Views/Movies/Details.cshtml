@model Vidly.Models.Movie

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<span>@Html.ActionLink("<< Movies", "Index", "Movies")</span>

<h2>@Model.Name</h2>

<ul>
    <li>Genre: @Model.Genre</li>
    <li>Release Date: @Model.ReleaseDate.Value.ToString("MMMM yyyy")</li>
    <li>Date Added: @Model.DateAdded.Value.ToShortDateString()</li>
    <li>In Stock: @Model.Stock</li>
</ul>